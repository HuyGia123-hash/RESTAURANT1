@model List<RestaurantManagement.Models.CartItem>

<h2>Danh sách món đặt</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tên món</th>
            <th>Số lượng</th>
            <th>Tổng cộng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice.ToString("N0") đ</td>
            </tr>
        }
    </tbody>
</table><a href="@Url.Action("ConfirmOrder", "Order")" class="btn btn-primary">Đặt món</a>

<a href="@Url.Action("Index", "Menu")" class="btn btn-secondary">⬅ Quay lại Menu</a>
