@model List<Reservation>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3>Danh Sách Đơn Đặt Bàn Chờ Xác Nhận</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Confirm", "Reservation", FormMethod.Post))
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Mã Đặt Bàn</th>
                                <th>Tên Khách Hàng</th>
                                <th>Số Điện Thoại</th>
                                <th>Ngày Đặt</th>
                                <th>Ngày Đến</th>
                                <th>Số Lượng Khách</th>
                                <th>Bàn</th>
                                <th>Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.CustomerName</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.ReservationDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.ArrivalDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.NumberOfGuests</td>
                                        <td>@item.TableId</td>
                                        <td>
                                            <button type="submit" name="id" value="@item.Id" class="btn btn-success btn-sm">
                                                Xác Nhận
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">Không có đơn đặt bàn nào đang chờ xác nhận.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
